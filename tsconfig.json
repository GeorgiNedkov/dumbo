{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
